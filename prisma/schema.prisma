generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Auditor {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  password    String
  teamName    String?
  role        String?
  profilePicture String?
  audits      Audit[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Audit {
  id            Int      @id @default(autoincrement())
  leaderName    String
  auditName     String
  status        String
  period        String
  riskMatrices  RiskMatrix[]
  walkthroughs  Walkthrough[]
  auditorId     Int
  auditor       Auditor   @relation(fields: [auditorId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model RiskMatrix {
  id             Int      @id @default(autoincrement())
  risk           String
  control        String
  reviewInfo     String
  auditId        Int
  audit          Audit    @relation(fields: [auditId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Walkthrough {
  id            Int      @id @default(autoincrement())
  name          String
  auditId       Int
  audit         Audit     @relation(fields: [auditId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
